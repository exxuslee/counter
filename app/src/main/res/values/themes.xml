<resources>
    <style name="Base.Theme.counter" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="colorAccent">@color/color_main_1</item>
        <item name="android:textColor">@color/color_text_0</item>
        <item name="android:textColorPrimary">@color/color_text_0</item>
        <item name="android:colorControlNormal">@color/color_text_0</item>
        <item name="android:windowBackground">@color/color_bg_1</item>
        <item name="android:navigationBarColor">@color/color_bg_1</item>

        <item name="colorControlNormal">@color/color_main_1</item>
        <item name="colorControlActivated">@color/color_main_1</item>
        <item name="colorControlHighlight">@color/color_main_1</item>
        <item name="colorButtonNormal">@color/color_main_1</item>
        <item name="colorSwitchThumbNormal">@color/color_main_1</item>
        <item name="controlBackground">@color/color_main_1</item>
        <item name="colorBackgroundFloating">@color/color_main_1</item>

    </style>

    <style name="Theme.counter" parent="Base.Theme.counter" />

    <!-- Тема для системного SplashScreen (Android 12+) -->
    <style name="Theme.counter.Splash" parent="Theme.SplashScreen">
        <!-- Фон заставки -->
        <item name="windowSplashScreenBackground">@color/color_bg_1</item>
        <!-- Иконка заставки (можно заменить на свой логотип) -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Длительность анимации (мс) -->
        <item name="windowSplashScreenAnimationDuration">300</item>
        <!-- Тема, которая будет применена после скрытия splash -->
        <item name="postSplashScreenTheme">@style/Theme.counter</item>
    </style>
</resources>